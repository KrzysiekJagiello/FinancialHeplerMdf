<Window x:Class="financialHelper1._0.AddExpenseWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:financialHelper1._0"
        mc:Ignorable="d"
        Title="Add Expense" Height="400" Width="1200" Background="#FF333131" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="/FinancialHelperExpense3.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Date" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Foreground="#FFEAEAEA"/>
        <Label Content="Category" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Background="Transparent" Foreground="#FFEAEAEA"/>
        <Label Content="Amount" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Background="Transparent" Foreground="#FFEAEAEA"/>
        <Label Content="Account" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Background="Transparent" Foreground="#FFEAEAEA"/>
        <Label Content="Return" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="4" Background="Transparent" Foreground="#FFEAEAEA"/>
        <Label Content="Settled" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="5" Background="Transparent" Foreground="#FFEAEAEA"/>
        <Label Content="Description" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="6" Background="Transparent" Foreground="#FFEAEAEA"/>

        <DatePicker Name="dateExp" VerticalAlignment="Center" Grid.Row="1" Margin="10,0,10,0" Width="NaN"/>
        <TextBox x:Name="txtCategory" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Foreground="Black" Background="#FFEAEAEA" Margin="10,0,10,0" Width="NaN"/>
        <TextBox x:Name="txtAmount" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" Foreground="Black" Background="#FFEAEAEA" Margin="10,0,10,0" Width="NaN"/>
        <ComboBox x:Name="cmbAccount" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1" Margin="10,0,10,0" Width="NaN"/>
        <TextBox x:Name="txtReturn" VerticalAlignment="Center" Grid.Column="4" Grid.Row="1" Foreground="Black" Background="#FFEAEAEA" Margin="10,0,10,0" Width="NaN"/>
        <CheckBox x:Name="chbSettled" Content="Is settled?" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="1" Foreground="#FFEAEAEA" Margin="10,0,10,0" Width="NaN"/>
        <TextBox x:Name="txtDescription" VerticalAlignment="Center" Grid.Column="6" Grid.Row="1" Foreground="Black" Background="#FFEAEAEA" Margin="10,0,10,0" Width="NaN" TextWrapping="Wrap"/>

        <Button x:Name="btnSave" Content="Save" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2"  Margin="10,0,10,0" Width="NaN" Click="btnSave_Click"/>
        <Button x:Name="btnClose" Content="Close" VerticalAlignment="Center" Grid.Column="4" Grid.Row="2"  Margin="10,0,10,0" Width="NaN" Click="btnClose_Click"/>


    </Grid>
</Window>
